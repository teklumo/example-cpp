/* 3. Write a program to input eight integer numbers into an array named temp. As each number is 
input, add the number into a total. After all numbers are input, display the number and their 
average. */


#include <iostream>
using namespace std;
#include <string>
int main(){
    double temp[8],sum(0);
	int i(0);
	double ava;
	cout<<"enter the nums";
	for(int i=0;i<8;i++){
		cin>>temp[i];
		sum=sum+temp[i];
	}
	for(int i=0;i<8;i++){
		cout<<temp[i]<<" ";
	}
	cout<<endl;
	ava=sum/8;
	cout<<"there avarage is:"<<ava;
	return 0;
}
