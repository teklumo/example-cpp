/* j. Sort the digits of a given number only using loops. (E.g. input = 4637215 
Output=1234567)*/

#include <iostream>
#include<cmath>
using namespace std; 
  
int main() 
{
 char num[8]="4637215";
 cout<<"before:"<<num<<endl;
 for(int i=0;i<7;i++){
  for(int j=i+1;j<7;j++){
    if(num[i]>num[j]){
      int temp=num[i];
      num[i]=num[j];
      num[j]=temp;
    }
  }
 }
 cout<<"after:"<<num;
     return 0;
  }
  
  
 
